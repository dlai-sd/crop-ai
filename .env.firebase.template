# Firebase Configuration for Crop AI
# Copy this to .env and fill in your actual Firebase project values
# DO NOT commit this file with real credentials to Git

# ============================================================================
# FIREBASE PROJECT CREDENTIALS
# ============================================================================
# Get these from: Firebase Console > Project Settings > Service Accounts

# Firebase Project ID (found in Firebase Console)
FIREBASE_PROJECT_ID=crop-ai-dev

# Firebase Database URL (Realtime Database)
# Format: https://YOUR_PROJECT_ID.firebaseio.com
FIREBASE_DATABASE_URL=https://crop-ai-dev.firebaseio.com

# Firebase Storage Bucket (Cloud Storage)
# Format: YOUR_PROJECT_ID.appspot.com
FIREBASE_STORAGE_BUCKET=crop-ai-dev.appspot.com

# Firebase API Key (for web/mobile clients)
FIREBASE_API_KEY=AIzaSy...

# Firebase Auth Domain
FIREBASE_AUTH_DOMAIN=crop-ai-dev.firebaseapp.com

# Firebase Messaging Sender ID
FIREBASE_MESSAGING_SENDER_ID=123456789

# Firebase App ID
FIREBASE_APP_ID=1:123456789:web:abcd1234efgh5678

# Firebase Measurement ID (Google Analytics)
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================================================
# SERVICE ACCOUNT CREDENTIALS (Backend/Python Only)
# ============================================================================
# Download service account JSON from Firebase Console > Project Settings > Service Accounts
# Either:
# 1. Set FIREBASE_CREDENTIALS_JSON with full JSON string, OR
# 2. Place firebase-service-account.json in project root, OR
# 3. Use Google Cloud Application Default credentials

# Full service account JSON (for production)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"crop-ai-dev",...}

# ============================================================================
# OPTIONAL: Firebase Emulator Suite (for local development)
# ============================================================================
# Set to 'true' to use Firebase Emulator Suite instead of live Firebase
FIREBASE_USE_EMULATOR=false

# Emulator ports (default Firebase Emulator Suite ports)
FIREBASE_EMULATOR_AUTH_PORT=9099
FIREBASE_EMULATOR_DB_PORT=9000
FIREBASE_EMULATOR_STORAGE_PORT=5002
FIREBASE_EMULATOR_MESSAGING_PORT=5001

# ============================================================================
# MOBILE APP CONFIGURATION
# ============================================================================
# These are used by Flutter/mobile apps

# Analytics Enabled
FIREBASE_ANALYTICS_ENABLED=true

# Crash Reporting Enabled
FIREBASE_CRASHLYTICS_ENABLED=true

# Performance Monitoring Enabled
FIREBASE_PERFORMANCE_ENABLED=true

# App Check Token (for API security)
FIREBASE_APP_CHECK_DEBUG_TOKEN=YOUR_DEBUG_TOKEN_HERE
